# SSH Config for Shasta Infrastructure
# Add this to your ~/.ssh/config file

# Bastion Host Configuration
Host shasta-bastion
    HostName <BASTION_PUBLIC_IP>
    User ec2-user
    IdentityFile ~/.ssh/john.davis.pem
    ForwardAgent yes
    ServerAliveInterval 60

# Producer Instance Configuration (through bastion)
Host shasta-producer-0
    HostName <PRODUCER_PRIVATE_IP>
    User ec2-user
    IdentityFile ~/.ssh/john.davis.pem
    ProxyJump shasta-bastion
    ForwardAgent yes
    ServerAliveInterval 60

# Generic pattern for any producer instance
Host shasta-producer-*
    User ec2-user
    IdentityFile ~/.ssh/john.davis.pem
    ProxyJump shasta-bastion
    ForwardAgent yes
    ServerAliveInterval 60 